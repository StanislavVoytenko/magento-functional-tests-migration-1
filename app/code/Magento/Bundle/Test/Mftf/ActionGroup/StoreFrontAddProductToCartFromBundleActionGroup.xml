<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StoreFrontAddProductToCartFromBundleWithCurrencyActionGroup">
        <annotations>
            <description>Adds a Bundled Product to the Cart with a specified Currency Value.</description>
        </annotations>
        <arguments>
            <argument name="product"/>
            <argument name="currency" type="string" defaultValue="US Dollar"/>
        </arguments>

        <click selector="{{StorefrontBundledSection.currencyTrigger}}" stepKey="openCurrencyTrigger"/>
        <click selector="{{StorefrontBundledSection.currency(currency)}}" stepKey="chooseCurrency"/>
        <click selector="{{StorefrontBundledSection.addToCart}}" stepKey="clickCustomize"/>
        <waitForPageLoad stepKey="waitForBundleOpen"/>
        <checkOption selector="{{StorefrontBundledSection.productInBundle(product.name)}}" stepKey="chooseProduct"/>
        <click selector="{{StorefrontBundledSection.addToCartConfigured}}" stepKey="addToCartProduct"/>
        <scrollToTopOfPage stepKey="scrollToTop"/>
    </actionGroup>

    <!-- Add Bundle Product to Cart from Product Page with Custom And Bundle Options-->
    <actionGroup name="StorefrontAddBundleProductWithCustomOptionsToCartFromProdPage">
        <arguments>
            <argument name="product"/>
            <argument name="bundleOptionItem"/>
            <argument name="customBundleOptionValueTitle"/>
        </arguments>
        <amOnPage url="{{product.urlKey}}.html" stepKey="navigateToProductPage"/>
        <waitForPageLoad stepKey="waitForPageLoad2"/>
        <click selector="{{StorefrontBundledSection.addToCart}}" stepKey="clickCustomizeAndAddToCart"/>
        <waitForElementVisible selector="{{StorefrontBundledSection.bundleOptionsItemSelect(bundleOptionItem)}}"
                               stepKey="waitForElementVisible"/>
        <selectOption selector="{{StorefrontBundledSection.bundleOptionsItemSelect(bundleOptionItem)}}"
                      userInput="{{bundleOptionItem}}"
                      stepKey="selectBundleOptionItem"/>
        <selectOption selector="{{StorefrontBundledSection.bundleCustomOption(customBundleOptionValueTitle)}}"
                      userInput="{{customBundleOptionValueTitle}}"
                      stepKey="selectBundleCustomOption"/>
        <click selector="{{StorefrontBundledSection.addToCartConfigured}}" stepKey="clickAddBundleProductToCart"/>
        <waitForElementVisible selector="{{StorefrontMinicartSection.productCount}}" stepKey="waitProductCount"/>
        <see userInput="You added {{product.name}} to your shopping cart."
             selector="{{StorefrontMessagesSection.success}}" stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>
